{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranches": ["main"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@workspace/"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["*"],
      "groupName": "all external dependencies",
      "automerge": true
    }
  ]
}
