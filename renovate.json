{
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchPackagePatterns": ["^@workspace/"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "matchPackagePatterns": ["*"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "matchPackagePatterns": ["*"]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "monorepo": {
    "enabled": true,
    "packagePatterns": [
      "package.json",
      "apps/*/package.json",
      "packages/*/package.json"
    ]
  }
}
