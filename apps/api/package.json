    "dotenv": "^17.2.3",
    "hono": "^4.10.7",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@react-email/preview-server": "^5.0.5",
    "@types/bun": "^1.3.3",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@workspace/eslint-config": "*",
    "eslint": "^9.39.1",
    "prisma": "^7.0.1",
    "typescript": "^5.9.3"
