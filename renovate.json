{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranchPatterns": ["main"],
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": ["/^@workspace//"]
    },
    {
      "groupName": "all external dependencies",
      "automerge": true,
      "matchPackageNames": ["*"]
    }
  ]
}
